generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  events    Event[]
}

model Event {
  id            String    @id @default(cuid())
  type          EventType
  timestamp     DateTime
  notes         String?
  duration      Int?      // Duration in minutes (for NAP and FEED)
  duringFeeding Boolean?  // Whether POOP or PEE occurred during feeding
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())

  @@index([timestamp])
  @@index([type])
  @@index([userId])
}

enum EventType {
  POOP
  PEE
  NAP
  FEED
  DIAPER
}
